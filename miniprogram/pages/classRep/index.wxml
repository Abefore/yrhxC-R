<image src="/images/classRep/bg.png" mode="scaleToFill" style="position: absolute; width: 100%;height: 100%;"></image>
<view style="width: 100%;height: 100%;display:flex; flex-direction:column;flex-wrap:wrap;justify-content:flex-start;align-items:center;">
  <image style="margin-top:10%;width:100%;height:500rpx" src="{{imageFileID[imgIndex]}}"  mode="aspectFill" show-menu-by-longpress="true" ></image>
  <block wx:if="{{imageFileID.length > 0}}">
    <text style="margin: 30rpx;color: #6b7579;">长按可保存图片</text>
    <view style="width: 100%;display: flex; flex-direction: row; flex-wrap: nowrap; justify-content: space-between; align-items: center">
      <button wx:if="{{imgIndex > 0}}"  bindtap="prePic" style="background:#245aaf;border-radius: 50rpx;width:30%;color:#ffffff;font-size: small;">上一张</button>
      <button  wx:if="{{imgIndex + 1 < imageFileID.length }}" bindtap="nextPic" style="background:#245aaf;border-radius: 50rpx;width:30%;color:#ffffff;font-size: small;">下一张</button>
    </view>
  </block>
  <video src="cloud://cloud1-8gah9v4cd85e78f5.636c-cloud1-8gah9v4cd85e78f5-1307734597/default/test.mp4" muted="true" controls="false" loop="true" autoplay="true" object-fit="fill" style="width:100%;margin-top: 10%;"></video>
</view>